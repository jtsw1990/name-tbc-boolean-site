<div class="card">
    <div class="card-body shadow-lg">
        <p class="card-title text-center display-4">
            <%= q.question %>
        </p>
        <hr class="my-4">
        <div class="row">
            <div class="col text-center">
                <form action="/voteyes/<%= q._id%>/<%= country %>/<%= q.question %>" method="POST">
                    <button type="submit" class="btn btn-success btn-lg">YES</button>
                </form>
            </div>
            <div class="col text-center">
                <form action="/voteno/<%= q._id%>/<%= country %>/<%= q.question %>" method="POST">
                <button type="submit" class="btn btn-danger btn-lg">NOPE</button>
                </form>
            </div>
        </div>
    </div>
</div>